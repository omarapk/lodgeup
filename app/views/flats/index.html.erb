<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>All Flats</h1>
  <%= link_to "New Flat", new_flat_path, class: "btn btn-success" %>
</div>

<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= form_with url: flats_path, method: :get, class: "mb-5" do %>
        <div class="input-group">
          <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Search for a flat..." %>
          <button class="btn btn-primary" type="submit">Search</button>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row g-4">
    <% @flats.each do |flat| %>
      <%= render 'card', flat: flat %>
    <% end %>
  </div>
</div>
