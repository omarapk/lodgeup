<div class="card" style="width: 18rem;">
  <%= image_tag flat.photo, class: 'card-img-top' if flat.photo.attached?%>
  <div class="card-body">
    <h5 class="card-title"><%= flat.title %></h5>
    <p class="card-text"><%= flat.description %></p>
    <%= link_to "See details", flat_path(flat), class:"btn btn-primary"  %>
  </div>
</div>
